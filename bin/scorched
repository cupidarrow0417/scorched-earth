#!/usr/bin/env ruby

require_relative "../lib/scorched"

title   = "scorched v#{Scorched::VERSION}-#{`git rev-parse HEAD || echo 'r'`}"
options = { fullscreen: false, size: [800, 600] }

Ray::Game.new(title, options) do
  register { add_hook :quit, method(:exit!) }

  scene :game, Scorched::GameScene

  scenes << :game
end.run
